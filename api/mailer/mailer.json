{ "__comments": "Configuration for the mailer module.",
	"senders": {
		"bookingConfirmation": "noreply@comicstrips.nyc",
		"bookingCreated": "noreply@comicstrips.nyc"
	},
	"templates": {
		"vendorOrderCreated": {
			"vendor": {
				"template": "./templates/vendorOrderCreated/vendor.json",
				"sender": "vendors@comicstrips.nyc",
				"subject": "ComicStrips NYC: New Order"
			}
		},
		"bookingCreated": {
			"customer": {
				"template": "./templates/bookingCreated/customer.json",
				"sender": "noreply@comicstrips.nyc",
				"subject": "Booking Request Received."
			}
		},
		"bookingConfirmed": {
			"accountManager": {
				"template": "./templates/bookingConfirmed/account-manager.json",
				"sender": "bookings@comicstrips.nyc",
				"subject": "New Booking Confirmed"
			},
			"customer": {
				"template": "./templates/bookingConfirmed/customer.json",
				"sender": "bookings@comicstrips.nyc",
				"subject": "Booking Confirmed. Everything's All Set!"
			},
			"talent": { 
				"template": "./templates/bookingConfirmed/talent.json",
				"sender": "bookings@comicstrips.nyc",
				"subject": "Booking Confirmed. Event Details Enclosed."
			}
		}
	}
}